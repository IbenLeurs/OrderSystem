<Window x:Class="RegisterSystem.StudentInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterSystem"
        mc:Ignorable="d"
        Title="StudentID" Height="130" Width="250">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock  Text="Enter studentID" FontSize="20" />
            <TextBox x:Name="ResponseTextBox" FontSize="20"/>
            <Button x:Name="btnOkay" Content="OK" Click="OKButton_Click" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
